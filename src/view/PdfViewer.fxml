<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ViewPdfController">
	<padding>
		<Insets top="5" bottom="5" left="5" right="5" />
	</padding>
	<top>
		<HBox spacing="5">
			<Button text="View Transcript" onAction="#loadFile"/>
			<Label text="Zoom:"/>
			<Button text="-" onAction="#zoomOut" />
			<Button text="+" onAction="#zoomIn" />
			<Button text="Zoom to fit" onAction="#zoomFit" />
			<Button text="Zoom to width" onAction="#zoomWidth" />
			<Label fx:id = "currentZoomLabel" />
			<padding>
				<Insets top="5" bottom="5" left="5" right="5" />
			</padding>
		</HBox>
	</top>
	<center>
		<Pagination fx:id="pagination" />
	</center>
	<fx:define>
		<ScrollPane fx:id="scroller" pannable="true" />
	</fx:define>
</BorderPane>